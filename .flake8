[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    venv,
    venv_py312,
    .pytest_cache,
    database,
    logs,
    *.egg-info,
    build,
    dist

# Ignore some common issues in data science code
ignore =
    E203,  # Whitespace before ':'
    E501,  # Line too long (handled by black)
    W503,  # Line break before binary operator
    W504,  # Line break after binary operator

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
